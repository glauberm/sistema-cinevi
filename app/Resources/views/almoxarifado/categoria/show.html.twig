{% extends 'admin/crud/base_show.html.twig' %}

{% set title = item.nome %}
{% set routeList = path('almoxarifado_categoria_index') %}
{% set routeEdit = path('almoxarifado_categoria_edit', { 'params': item.id }) %}
{% set routeHistoricoName = 'almoxarifado_categoria_historico' %}
{% set textoRemocao = 'Ao remover uma categoria de reserváveis, você removerá todos os reserváveis associados a ela.'%}

{% block dtdd %}
    {% include 'almoxarifado/categoria/item.html.twig' %}
{% endblock %}

{% block extras %}
    <h2 id="reservaveis" class="title-primary">Reserváveis</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    {% include 'almoxarifado/equipamento/list_thead.html.twig' with { builderName: 'equipamento' } %}
                </tr>
            </thead>
            <tbody>
                {% for item in pagination %}
                    <tr>
                        {% include 'almoxarifado/equipamento/list_tbody.html.twig' %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% block blockPagination %}
        {% include 'admin/pagination/pagination.html.twig' with { name: 'num_linhas' } %}
    {% endblock %}

{% endblock %}
