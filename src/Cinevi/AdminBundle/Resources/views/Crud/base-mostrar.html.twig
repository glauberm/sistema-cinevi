{% extends 'CineviAdminBundle::base.html.twig' %}

{% block mainActions %}
    <a class="navbar-brand btn btn-link" href="{{ routeListar }}">
        {% include 'CineviAdminBundle:SVG:voltar.html.twig' %}
    </a>
    {% if is_granted('edit', item) or app.user == item %}
        <div class="navbar-form navbar-nav">
            <a class="btn btn-info" href="{{ routeEditar }}">{% include 'CineviAdminBundle:SVG:editar.html.twig' %}<span class="hidden-xs">Editar</span></a>
        </div>
    {% endif %}
    {% if is_granted('delete', item) %}
        {{ form_start(deleteForm, { 'attr' : { 'class': 'navbar-form navbar-left' } }) }}
            <button type="submit" class="btn btn-danger">{% include 'CineviAdminBundle:SVG:remover.html.twig' %}<span class="hidden-xs">Remover</span></button>
        {{ form_end(deleteForm) }}
    {% endif %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <dl>{% block dtdd %}{% endblock %}</dl>

{% endblock %}
