<div class="row">
    <div class="col-sm-6">{{ form_row(form.username) }}</div>
    <div class="col-sm-6">{{ form_row(form.email) }}</div>
</div>
<div class="row">
    <div class="col-sm-6">{{ form_row(form.matricula) }}</div>
    <div class="col-sm-6">{{ form_row(form.telefone) }}</div>
</div>
{% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
        <div class="col-sm-6 col-md-3">{{ form_row(form.enabled) }}</div>
        <div class="col-sm-6 col-md-3">{{ form_row(form.confirmado) }}</div>
        <div class="col-sm-6 col-md-3">{{ form_row(form.professor) }}</div>
        <div class="col-sm-6 col-md-3">{{ form_row(form.roles) }}</div>
    </div>
{% endif %}
