{% extends 'CineviAdminBundle:Crud:base-show.html.twig' %}

{% set title = 'Reserva ' ~ item.title %}
{% set routeList = path('cget_reservas') %}
{% set routeEdit = path('edit_reservas', { 'id': item.id }) %}

{% block dtdd %}
    <dt>Código</dt><dd>{{ item.title }}</dd>

    <div class="row">
        <div class="col-sm-6"><dt>Usuário</dt><dd><a href="{{ path('get_usuarios', { 'params' : item.user.id}) }}">{{ item.user.username }}</a></dd></div>
        <div class="col-sm-6">
            <dt>Projeto</dt>
            <dd><a href="{{ path('get_projetos', { 'params' : item.projeto.id}) }}">{{ item.projeto.realizacao.titulo }}</a></dd>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6"><dt>Data de Início</dt><dd>{{ item.startDate|date('d/m/Y') }}</dd></div>
        <div class="col-sm-6"><dt>Data de Fim</dt><dd>{{ item.endDate|date('d/m/Y') }}</dd></div>
    </div>

    <h2 id="reservaveis">Reserváveis</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Cód.</th>
                    <th>Reservável</th>
                </tr>
            </thead>
            <tbody>
                {% for equipamento in item.equipamentos %}
                    <tr>
                        <td>{{ equipamento.codigo }}</td>
                        <td><a href="{{ path('get_reservaveis', { 'params': item.id }) }}">{{ equipamento.nome }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
