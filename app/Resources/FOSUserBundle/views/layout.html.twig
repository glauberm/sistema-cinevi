{% extends 'admin/base.html.twig' %}

{% block content %}
    {% if headerSecurity is defined and headerSecurity == true %}
        {% include 'admin/header_security.html.twig' %}
    {% else %}
        {% include 'admin/header_home.html.twig' %}
    {% endif %}

    <div class="content content-security">
        <div class="container">

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissal fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block fos_user_content %}
            {% endblock fos_user_content %}

        </div>
    </div>
{% endblock %}
