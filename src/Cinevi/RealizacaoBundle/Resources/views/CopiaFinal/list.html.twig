{% extends 'CineviAdminBundle:Crud:base-list.html.twig' %}

{% set title = 'Cópias Finais' %}
{% set routeAdd = path('new_copias-finais') %}
{% set routeCsv = path('copias_finais_csv') %}

{% block addAction %}
    <div class="navbar-form navbar-nav">
        <a class="btn btn-success" href="{{ routeAdd }}">{% include 'CineviAdminBundle:SVG:adicionar.html.twig' %}<span class="hidden-xs">Adicionar</span></a>
    </div>
{% endblock %}

{% block thead %}
    <th>{{ knp_pagination_sortable(pagination, 'Título', 'r.titulo') }}</th>
    <th>{{ knp_pagination_sortable(pagination, 'Responsável', 'u.username') }}</th>
    <th>{{ knp_pagination_sortable(pagination, 'Modalidade', 'm.nome') }}</th>
{% endblock %}

{% block tbody %}
    <td>
        <a href="{{ path('get_copias-finais', { 'params': item.id }) }}">{{ item.realizacao.titulo }}</a>
    </td>
    <td>
        <a href="{{ path('get_usuarios', { 'params': item.realizacao.user.id }) }}">{{ item.realizacao.user.username }}</a>
    </td>
    <td>
        <a href="{{ path('get_modalidades', { 'params': item.realizacao.modalidade.id }) }}">{{ item.realizacao.modalidade.nome }}</a>
    </td>
{% endblock %}
