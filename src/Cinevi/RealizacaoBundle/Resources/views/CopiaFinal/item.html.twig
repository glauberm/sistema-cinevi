{% include 'CineviRealizacaoBundle:Realizacao:item.html.twig' with {item: item.realizacao} %}

<div class="row">
    <div class="col-md-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Link para o vídeo',
            'item': item.linkVideo,
            'link': item.linkVideo,
            'target': '_blank'
        } %}
    </div>
    <div class="col-md-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Senha do vídeo',
            'item': item.senhaVideo
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <dt>Projeto</dt>
        {% if item.projeto is defined and item.projeto != null %}
            <dd>
                <a href="{{ path('get_projetos', { 'params': item.projeto.id }) }}">{{ item.projeto.realizacao.titulo }}</a>
            </dd>
        {% else %}
            <dd class="inherit">Outro</dd>
        {% endif %}
    </div>
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Cromia',
            'item': item.cromia
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Proporção',
            'item': item.proporcao
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Formato',
            'item': item.formato
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Duração (em minutos)',
            'item': item.duracao
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Formato Digital Nativo',
            'item': item.formatoDigitalNativo
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Codec',
            'item': item.codec
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Container (wrapper)',
            'item': item.container
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Taxa de bits',
            'item': item.taxaBits
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Velocidade',
            'item': item.velocidade
        } %}
    </div>
    <div class="col-sm-4">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Som',
            'item': item.som
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Resolução de Áudio Digital',
            'item': item.resolucaoAudioDigital
        } %}
    </div>
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Suporte de Matriz Digital',
