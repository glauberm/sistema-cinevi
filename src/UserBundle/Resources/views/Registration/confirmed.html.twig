{% extends "FOSUserBundle::layout.html.twig" %}

{% set headerPublic = true %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <h1 class="page-header text-primary">Bem-vinda(o), {{ user.username }}!</h1>
    <p class="lead">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
    {% if targetUrl %}
    <br/>
    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock fos_user_content %}
