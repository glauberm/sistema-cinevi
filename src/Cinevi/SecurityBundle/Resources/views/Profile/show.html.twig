{% extends 'CineviAdminBundle::base.html.twig' %}

{% set title = app.user.username %}
{% set routeList = path('index') %}
{% set routeEdit = path('fos_user_profile_edit') %}

{% block mainActions %}
    <a class="navbar-brand btn btn-link" href="{{ routeList }}">
        {% include 'CineviAdminBundle:SVG:voltar.html.twig' %}
    </a>
    {% if is_granted('edit', user) or app.user == user %}
        <div class="navbar-form navbar-nav">
            <a class="btn btn-info" href="{{ routeEdit }}">{% include 'CineviAdminBundle:SVG:editar.html.twig' %}<span class="hidden-xs">Editar</span></a>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% include "FOSUserBundle:Profile:show_content.html.twig" %}
{% endblock body %}
