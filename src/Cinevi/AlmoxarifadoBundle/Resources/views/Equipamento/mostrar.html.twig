{% extends 'CineviAdminBundle:Crud:base-mostrar.html.twig' %}

{% set title = item.nome %}
{% set routeAtual = path('get_equipamento', { 'id': item.id }) %}
{% set routeListar = path('get_equipamentos') %}
{% set routeEditar = path('edit_equipamento', { 'id': item.id }) %}
{% set routeAdicionar = path('new_equipamento') %}

{% block maisActionsButton %}
    {% if is_granted('ROLE_FUNCIONARIO') %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block maisBotoes %}
    {% if is_granted('ROLE_FUNCIONARIO') %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block dtdd %}

<div class="row">
    <div class="col-sm-3 col-md-2"><dt>Cód.</dt><dd>{{ item.codigo }}</dd></div>
    <div class="col-sm-9 col-md-10"><dt>Nome</dt><dd>{{ item.nome }}</dd></div>
</div>
<div class="row">
    <div class="col-sm-6"><dt>Categoria</dt><dd>{{ item.categoria.nome }}</dd></div>
    <div class="col-sm-6"><dt>Especificação</dt><dd>{{ item.especificacao ? item.especificacao : 'Não informado' }}</dd></div>
</div>
<div class="row">
    <div class="col-sm-6"><dt>Fabricante</dt><dd>{{ item.fabricante ? item.fabricante : 'Não informado' }}</dd></div>
    <div class="col-sm-6"><dt>Modelo</dt><dd>{{ item.modelo ? item.modelo : 'Não informado' }}</dd></div>
</div>
<div class="row">
    <div class="col-sm-6"><dt>Nº de Patrimônio</dt><dd>{{ item.patrimonio ? item.patrimonio : 'Não informado' }}</dd></div>
    <div class="col-sm-6"><dt>Nº de Série</dt><dd>{{ item.nSerie ? item.nSerie : 'Não informado' }}</dd></div>
</div>
<div class="row">
    <div class="col-md-6"><dt>Acessórios</dt><dd>{{ item.acessorios ? item.acessorios : 'Não informado' }}</dd></div>
    <div class="col-md-6"><dt>Observações</dt><dd>{{ item.obs ? item.obs : 'Não informado' }}</dd></div>
</div>
<dt>Em Manutenção?</dt><dd>{{ item.manutencao ? 'Sim' : 'Não' }}</dd>
{% endblock %}
