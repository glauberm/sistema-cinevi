{% extends 'AdminBundle:Crud:base-show.html.twig' %}

{% set title = item.nome %}
{% set routeList = path('almoxarifado_equipamento_index') %}
{% set routeEdit = path('almoxarifado_equipamento_edit', { 'params': item.id }) %}

{% block dtdd %}

    {% include 'AlmoxarifadoBundle:Equipamento:item.html.twig' %}
    
    <h2 id="reservas" class="h3"><a href="#reservas">Reservas</a></h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    {% include 'AlmoxarifadoBundle:CalendarEvent:list-thead.html.twig' with { builderName: 'reserva' } %}
                </tr>
            </thead>
            <tbody>
                {% for item in pagination %}
                    <tr>
                        {% include 'AlmoxarifadoBundle:CalendarEvent:list-tbody.html.twig' %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% include 'AdminBundle:Pagination:pagination.html.twig' with { name: 'numResultados' } %}

{% endblock %}
