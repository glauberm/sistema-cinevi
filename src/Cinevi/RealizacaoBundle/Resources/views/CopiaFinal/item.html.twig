        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Orçamento',
            'item': item.orcamento,
            'dd': 'R$ ' ~ item.orcamento
        } %}
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Fontes de Financiamento',
            'item': item.fontesFinanciamento|join(', ')
        } %}
