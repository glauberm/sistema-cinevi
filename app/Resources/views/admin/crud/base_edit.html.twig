{% extends 'admin/base.html.twig' %}

{% block mainActions %}
    <a class="navbar-brand btn btn-link" href="{{ routeList }}" title="Voltar">
        {% include 'admin/svg/voltar.html.twig' %}
    </a>
    {% block deleteAction %}
        {% if is_granted('delete', item) %}
            {% include 'admin/parts/delete.html.twig' %}
        {% endif %}
    {% endblock %}
{% endblock %}

{% block body %}

    {{ parent() }}

    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
        {% block form %}{% endblock %}
        <br/>
        <button type="submit" class="btn btn-lg btn-warning">Editar</button>
    {{ form_end(edit_form) }}

{% endblock %}
