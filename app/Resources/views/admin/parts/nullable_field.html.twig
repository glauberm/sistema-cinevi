<dt>{{ dt }}</dt>
{% if item is defined and item != null %}

    {% if dd is not defined %}
        {% set dd = item %}
    {% endif %}

    {% if link is defined and link != null %}
        {% if target is defined and target != null %}
            <a href="{{ link }}" target="{{ target }}"><dd>{{ dd }}</dd></a>
        {% else %}
            <a href="{{ link }}"><dd>{{ dd }}</dd></a>
        {% endif %}
    {% else %}
        {% if nl2br is defined and nl2br == true %}
            <dd>{{ dd|nl2br }}</dd>
        {% else %}
            {% if bool is defined and bool == true %}
                {% if dd == true %}
                    <dd>Sim</dd>
                {% else %}
                    <dd>Não</dd>
                {% endif %}
            {% else %}
                <dd>{{ dd }}</dd>
            {% endif %}
        {% endif %}
    {% endif %}
{% else %}
    <dd class="text-muted font-style-italic">Não informado</dd>
{% endif %}
