{% extends 'CineviAdminBundle:Crud:base-listar.html.twig' %}

{% set title = 'Categorias de Equipamento' %}
{% set routeAdicionar = path('new_categoria') %}
{% set routeCsv = path('categorias_csv') %}

{% block maisBotoes %}
    {% block maisBotoesBlock %}{% endblock %}
    {% if is_granted('ROLE_ALMOXARIFADO') %}
        <div class="navbar-form navbar-nav">
            <a class="btn btn-success" href="{{ routeAdicionar }}">Adicionar</a>
        </div>
    {% endif %}
{% endblock %}

{% block thead %}
    <th>{{ knp_pagination_sortable(pagination, 'Nome', 'item.nome') }}</th>
{% endblock %}

{% block tbody %}
    <td>
        <a href="{{ path('get_categoria', { 'id': item.id }) }}">{{ item.nome }}</a>
    </td>
{% endblock %}
