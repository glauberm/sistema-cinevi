<dt>Título</dt><dd>{{ item.titulo }}</dd>
<dt>Sinopse</dt><dd class="inherit">{{ item.sinopse }}</dd>

<div class="row">
    <div class="col-sm-4">
        <dt>Usuário</dt>
        <dd><a href="{{ path('get_usuarios', { 'params' : item.user.id }) }}">{{ item.user.username }}</a></dd>
    </div>
    <div class="col-sm-4">
        <dt>Modalidade</dt>
        <dd><a href="{{ path('get_modalidades', { 'params': item.modalidade.id }) }}">{{ item.modalidade.nome }}</a></dd>
    </div>
    <div class="col-sm-4">
        <dt>Professor(a)</dt>
        <dd><a href="{{ path('get_usuarios', { 'params': item.professor.id }) }}">{{ item.professor.username }}</a></dd>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Gênero(s)',
            'item': item.genero|join(', ')
        } %}
    </div>
    <div class="col-sm-6">
        {% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
            'dt': 'Captação',
            'item': item.captacao
        } %}
    </div>
</div>
{% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
    'dt': 'Detalhes da Captação',
    'item': item.detalhesCaptacao
} %}
{% include 'CineviAdminBundle:Parts:nullable-field.html.twig' with {
    'dt': 'Locação(ões)',
    'item': item.locacoes
} %}
