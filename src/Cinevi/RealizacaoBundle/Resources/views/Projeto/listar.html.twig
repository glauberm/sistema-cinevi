{% extends 'CineviAdminBundle:Crud:base-listar.html.twig' %}

{% set title = 'Projetos' %}
{% set routeAtual = path('get_projetos') %}
{% set routeAdicionar = path('new_projeto') %}

{% block thead %}
    <th>{{ knp_pagination_sortable(pagination, 'Nome', 'item.nome') }}</th>
{% endblock %}

{% block tbody %}
    <td>
        {% if is_granted('ROLE_FUNCIONARIO') %}
            <a href="{{ path('edit_projeto', { 'id': item.id }) }}">{{ item.nome }}</a>
        {% else %}
            <a href="{{ path('get_projeto', { 'id': item.id }) }}">{{ item.nome }}</a>
        {% endif %}
    </td>
{% endblock %}
