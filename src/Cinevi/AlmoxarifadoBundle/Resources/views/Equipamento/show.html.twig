{% extends 'CineviAdminBundle:Crud:base-show.html.twig' %}

{% set title = item.nome %}
{% set routeList = path('cget_reservaveis') %}
{% set routeEdit = path('edit_reservaveis', { 'id': item.id }) %}

{% block dtdd %}

    {% include 'CineviAlmoxarifadoBundle:Equipamento:item.html.twig' %}


    <h2 id="reservas" class="h3"><a href="#reservas">Reservas</a></h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    {% include 'CineviAlmoxarifadoBundle:CalendarEvent:list-thead.html.twig' with { builderName: 'reserva' } %}
                </tr>
            </thead>
            <tbody>
                {% for item in pagination %}
                    <tr>
                        {% include 'CineviAlmoxarifadoBundle:CalendarEvent:list-tbody.html.twig' %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% include 'CineviAdminBundle:Pagination:pagination.html.twig' with { name: 'numResultados' } %}

{% endblock %}
