{% extends 'AdminBundle:Crud:base-list.html.twig' %}

{% set title = 'Funções' %}
{% set routeAdd = path('realizacao_funcao_new') %}
{% set routeCsv = path('realizacao_funcao_csv') %}

{% block addAction %}
    {% if is_granted('ROLE_DEPARTAMENTO') %}
        <div class="navbar-form navbar-nav">
            <a class="btn btn-success" href="{{ routeAdd }}">{% include 'AdminBundle:SVG:adicionar.html.twig' %}<span class="hidden-xs">Adicionar</span></a>
        </div>
    {% endif %}
{% endblock %}

{% block thead %}
    <th>{{ knp_pagination_sortable(pagination, 'Nome', 'item.nome') }}</th>
{% endblock %}

{% block tbody %}
    <td>
        <a href="{{ path('realizacao_funcao_show', { 'params': item.id }) }}">{{ item.nome }}</a>
    </td>
{% endblock %}
