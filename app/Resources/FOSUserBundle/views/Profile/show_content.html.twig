{% trans_default_domain 'FOSUserBundle' %}
<dl>
    <div class="row">
        <div class="col-sm-6"><dt>Nome Completo</dt><dd>{{ user.username }}</dd></div>
        <div class="col-sm-6"><dt>Email</dt><dd>{{ user.email }}</dd></div>
    </div>

    <div class="row">
        <div class="col-sm-6"><dt>Matrícula/SIAPE</dt><dd>{{ user.matricula }}</dd></div>
        <div class="col-sm-6"><dt>Telefone</dt><dd>{{ user.telefone }}</dd></div>
    </div>
    {% include 'admin/parts/nullable_field.html.twig' with {
        'dt': 'Breve Currículo',
        'item': user.breveCurriculo,
        'nl2br' : true
    } %}
</dl>
